<h3>Candidates</h3>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @candidates.each do |can| %>
      <tr>
        <td><%= can.name %></td>
        <td><%= can.email %></td>        
        <td><%= link_to "Show", candidate_path(can.id) %></td>
        <td><%= link_to "Edit", edit_candidate_path(can) %></td>
        <td><%= link_to "Destroy", can, method: :delete, data: { confirm: "Are you sure?" } %></td>
        <td><%= link_to "Create New Report", new_report_path(:candidate_id => can.id)%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "New candidate", new_candidate_path %>

