<style>
  table {
    font-family: arial, sans-serif;
    border-collapse: collapse;
    width: 100%;
  }
</style>

<div class="row">
<h2>Candidates</h2>
  <div class="col-md-4">
    <%= form_with url: employer_candidates_path, html: {id: "drop_form"}, method: :get do|form|%>
      <%= text_field_tag :search, params[:search],  :class => "btn btn-outline-primary" %>
      <%= form.select :search_field, ["All",["Pass", "Pass"], ["Fail", "Fail"],["First Round", "First"],["Second Round", "Second"],["Final Round", "Final"]], selected: params[:search_field] %>
    <% end %>
  </div>
  <div class="col-md-2"><%= link_to "Create New Employer", new_employer_path, id: "create_empolyer", class: "btn btn-outline-success"%></div>
  <div class="col-md-2"><%= link_to "View Employers", employers_path, id: "view_employers", class: "btn btn-outline-success"%></div>
</div> 
<br>
<div id="candidates">
  <%= render "candidate"%>
</div>

<br>

<%= link_to "New candidate", new_employer_candidate_path, :class => "btn btn-outline-success"  %>
<%= link_to "Back", employers_path, :class => "btn btn-outline-success"%>