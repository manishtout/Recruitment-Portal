<%= form_with model: @employer do|employer|%>
  <% if @employer.errors.any? %>
    <%@employer.errors.full_messages.each do |message|%>
      <li><%= message %></li>
    <% end %>  
  <% end %>  
  Name:
  <%= employer.text_field :name%><br>
  Email:
  <%= employer.text_field :email%><br>
  Phone Number:
  <%= employer.text_field :phone_number%><br>
  <%= employer.submit "Submit"%>
<% end %>  

