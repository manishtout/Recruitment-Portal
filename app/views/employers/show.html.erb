<div class="row">
  <div class="col-md-3">
    <h1><%=@employer.name%></h1>
  </div>
  <div class="col-md-2"><%= link_to "Create Membership", new_employer_membership_path(@employer.id), id: "create_membership", class: "btn btn-outline-success"%></div>
</div>
  <%if @user_role%>
    <div class="row" id="user_role">
      <div class="col-md-3">
        <ul>
          <%@user_role[0].each do |employer|%>
            <div class="row">
            <li><%= employer%></li>
          </div>
          <% end %>
        <ul>  
      </div>
      <div class="col-md-1">
        <%@user_role[1].each do |user|%>
          <div class="row">
          <%= user%>  
        <% end %>
          </div>  
      </div>
    </div>  
    
  <% else %>
        <h4>No User</h4>
  <% end %>  
<%= link_to "Back", employers_path, class: "btn btn-outline-primary"%>
